{
  "compilerOptions": {
    "target": "ES2020", // Modern JS target
    "module": "CommonJS", // Node.js default module system
    "lib": ["ES2020"], // Include standard libs
    "outDir": "./dist", // Compiled files go here
    "rootDir": "./src", // Source files location
    "strict": true, // Enable all strict type checks
    "moduleResolution": "node", // Resolve modules like Node
    "esModuleInterop": true, // Enable default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checks on dependencies for faster builds
    "resolveJsonModule": true, // Allow importing JSON files
    "sourceMap": true // Generate sourcemaps for debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
